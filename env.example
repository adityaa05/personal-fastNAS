# ============================================================================
# Personal FastNAS Configuration
# ============================================================================
# Copy this file to .env and customize the values below
# IMPORTANT: Never commit .env to version control!

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================

# Base directory where all your files will be stored
# Windows example: C:\nas-storage or D:\my-files
# Mac example: /Users/yourusername/nas-storage
# Linux example: /home/yourusername/nas-storage or /mnt/storage
NAS_BASE_DIR=/path/to/your/storage/directory

# Maximum file upload size in bytes
# Default: 104857600 (100 MB)
# 50 MB = 52428800
# 500 MB = 524288000
# 1 GB = 1073741824
MAX_UPLOAD_SIZE=104857600

# ============================================================================
# SECURITY SETTINGS (CRITICAL!)
# ============================================================================

# Enable API key authentication (HIGHLY RECOMMENDED for remote access)
# Set to 'true' for production, 'false' only for local testing
ENABLE_AUTH=true

# Your secret API key for authentication
# MUST CHANGE THIS! Generate a secure random key:
# - Python: python -c "import secrets; print(secrets.token_hex(32))"
# - OpenSSL: openssl rand -hex 32
# - Online: https://www.allkeysgenerator.com/Random/Security-Encryption-Key-Generator.aspx
API_KEY=your-super-secret-api-key-change-this-immediately

# ============================================================================
# PERFORMANCE & RATE LIMITING
# ============================================================================

# Maximum requests per minute (per IP address)
# Lower for old hardware, higher for modern systems
# Default: 100
# Conservative: 50
# Aggressive: 200
RATE_LIMIT_REQUESTS=100

# Rate limit time window in seconds
RATE_LIMIT_WINDOW=60

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
# Use INFO for production, DEBUG for troubleshooting
LOG_LEVEL=INFO

# Environment: production or development
# Development enables /docs endpoint for API documentation
ENVIRONMENT=production

# ============================================================================
# ADVANCED SETTINGS (Optional)
# ============================================================================

# These are set in the code but can be overridden here if needed

# Thumbnail size for image previews (pixels)
# THUMBNAIL_SIZE=200

# Chunk size for file streaming (bytes)
# CHUNK_SIZE=8192

# ============================================================================
# NOTES
# ============================================================================

# 1. After creating .env, restart your server for changes to take effect
# 2. Keep your API_KEY secret - never share it!
# 3. Backup this file securely (but not in version control)
# 4. For Tailscale access, ensure ENABLE_AUTH=true
# 5. Adjust MAX_UPLOAD_SIZE based on your network speed and storage

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================

# Example 1: Personal use on old laptop (Conservative)
# NAS_BASE_DIR=C:\nas-storage
# MAX_UPLOAD_SIZE=52428800
# ENABLE_AUTH=true
# API_KEY=abc123...generated-key-here
# RATE_LIMIT_REQUESTS=50
# LOG_LEVEL=INFO
# ENVIRONMENT=production

# Example 2: Modern hardware with SSD (Aggressive)
# NAS_BASE_DIR=/home/user/nas-storage
# MAX_UPLOAD_SIZE=524288000
# ENABLE_AUTH=true
# API_KEY=xyz789...generated-key-here
# RATE_LIMIT_REQUESTS=200
# LOG_LEVEL=INFO
# ENVIRONMENT=production

# Example 3: Local testing only (Development)
# NAS_BASE_DIR=/Users/dev/test-storage
# MAX_UPLOAD_SIZE=104857600
# ENABLE_AUTH=false
# API_KEY=test-key-not-secure
# RATE_LIMIT_REQUESTS=1000
# LOG_LEVEL=DEBUG
# ENVIRONMENT=development